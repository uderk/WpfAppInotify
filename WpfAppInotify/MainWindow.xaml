<Window x:Class="WpfAppInotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppInotify"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="First Name" Name="FirstName" HorizontalAlignment="Left" Margin="76,34,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <TextBox Text="{Binding Path=FirstName, Mode=TwoWay}" HorizontalAlignment="Left" Height="30" Margin="76,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"  />
        <Label Content="Second Name" Name="SecondName" HorizontalAlignment="Left" Margin="76,126,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <TextBox Text="{Binding Path=SecondName, Mode=TwoWay}" HorizontalAlignment="Left" Height="30" Margin="76,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Label Content="Fullname" Name="Fullname" HorizontalAlignment="Left" Margin="76,216,0,0" VerticalAlignment="Top" Width="100" Height="30"/>
        <TextBox Text="{Binding Path=Fullname, Mode=TwoWay}" HorizontalAlignment="Left" Height="30" Margin="76,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />

    </Grid>
</Window>
